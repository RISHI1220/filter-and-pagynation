<p style="color: green"><%= notice %></p>

<div class="mx-5">
  <%= render @book %>
  <div class="d-flex">
    <%= link_to "Edit this book", edit_book_path(@book) , class:"btn btn-outline-warning me-2" %>
    <%= link_to "Back", :back, class:"btn btn-outline-secondary me-2" %>

    <%= button_to "Destroy this book", @book, method: :delete, class:"btn btn-outline-danger me-2" %>
  </div>
</div>
